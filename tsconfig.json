{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "jsx": "react",
    "noEmit": true, // no saving of compiled files since babel/webpack is compiling
    "isolatedModules": true, // use with Babel for TS compatibility
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["types"]
}
